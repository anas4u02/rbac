<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Users</title>
</head>

<h3>Users</h3>

<body>
  <table>
    <thead>
      <th>id</th>
      <th>email</th>
      <th>role</th>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><a href="/admin/user/<%= user.id %>"><%= user.email %></a></td>
        <td>
          <form
            action="/admin/update-role"
            method="post"
            class="manage-user-form"
          >
            <input type="hidden" name="id" value="<%= user.id %>" />
            <select name="role" id="role">
              <option value="ADMIN" <%= user.role === 'ADMIN' ? 'selected' : '' %> >Admin</option>
              <option value="DEVELOPER" <%= user.role === 'DEVELOPER' ? 'selected' : '' %>>Developer</option>
              <option value="INBOX" <%= user.role === 'INBOX' ? 'selected' : '' %>>Inbox/option>
            </select>
            <input type="submit" value="update">
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <br>

  <h3>Invitations</h3>
    <table>
      <thead>
        <th style="padding-right: 4px;">id</th>
        <th style="padding-right: 4px;">email</th>
        <th style="padding-right: 8px;">role</th>
        <th style="padding-right: 4px;">invitation status</th>
      </thead>
      <tbody>
        <% invitations.forEach(invitation=> { %>
          <tr>
            <td style="padding-right: 4px;"><%= invitation.id %></td>
            <td style="padding-right: 4px;"><%= invitation.email %></td>
            <td style="padding-right: 8px;"><%= invitation.role %></td>
            <td style="padding-right: 4px;"><%= invitation.invitationStatus %></td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <br>
  <a href="/user/profile">PROFILE</a>
</body>
</html>